<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="model.dao"/>

    <bean id="connectionSource" class="model.dao.databases.dbconnecton.ConnectionPool.Builder">
        <property name="url" value="jdbc:mysql://localhost:3306/userdatabase?useSSL=false"/>
        <property name="userName" value="epam"/>
        <property name="password" value="1234"/>
        <property name="logger">
            <bean class="org.slf4j.LoggerFactory" factory-method="getLogger">
                <constructor-arg type="java.lang.Class" value="model.dao.databases.dbconnecton.ConnectionPool"/>
            </bean>
        </property>
        <property name="poolSize" value="5"/>
    </bean>

    <bean id="globalDao" class="model.dao.databases.MySqlGlobalDao"/>

</beans>